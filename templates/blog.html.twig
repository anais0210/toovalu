{{ encore_entry_link_tags('bootstrap-css') }}

{% block content %}
    <section>
        <div class="container">
            <div class="row">
                <div class="card-group">
                    <div class="card">
                        {% for article in articles %}
                            <div class="card-body">
                                <h5 class="card-title"><a
                                            href="{{ path('actualites_article', {'slug': article.slug}) }}">{{ article.title }}</a>
                                </h5>
                                <p class="card-text">{{ article.content }}</p>
                                <p class="card-text"><small class="text-muted">{{ article.author }}</small></p>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}